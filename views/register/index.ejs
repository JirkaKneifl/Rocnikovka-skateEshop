<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h2>Registrace:</h2>
      <!-- Zacatek formulare -->
      <form action="/register" method="post">
        <!-- Input Jmeno -->
        <div class="mb-3">
          <label>Jmeno:</label>
          <input type="text" class="form-control" name="jmeno" /><br />
        </div>
        <!-- Input Prijmeni -->
        <div class="mb-3">
          <label>Prijmeni:</label>
          <input type="text" class="form-control" name="prijmeni" /><br />
        </div>
        <!-- Input Telefon -->
        <div class="mb-3">
          <label>Telefon:</label>
          <input type="tel" class="form-control" name="telefon" /><br />
        </div>
        <!-- Input Email -->
        <div class="mb-3">
          <label>Email:</label>
          <input type="email" class="form-control" name="email" /><br />
        </div>
        <!-- Input Heslo -->
        <div class="mb-3">
          <label>Heslo:</label>
          <input type="password" class="form-control" name="heslo" /><br />
        </div>
        <!-- Input Tlacitka odeslani -->
        <input
          type="submit"
          class="btn btn-primary"
          name="tlacitkoOdeslani"
          value="Odeslat"
        />
      </form>
      <!-- Konec formulare -->
    </div>
  </body>
</html>
